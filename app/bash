# Run all tests
python run_tests.py all

# Run unit tests only
python run_tests.py unit -v

# Run integration tests
python run_tests.py integration

# Run in debug mode
python run_tests.py debug

# Run performance tests
python run_tests.py performance

# Run security tests
python run_tests.py security

# Run specific test file
python run_tests.py specific tests/unit/test_scraper.py

# Run with parallel execution
python run_tests.py all -p

# Run without coverage
python run_tests.py all --no-coverage

# Debug a specific test
python -m pytest tests/unit/test_scraper.py::TestBaseScraper::test_normalize_email -v -s --pdb

# Run tests with coverage and open report
python run_tests.py all
# Then open test_reports/coverage/index.html

# Profile a specific function
python -m cProfile -o profile.stats app/scraper/base_scraper.py

# Memory profiling
python -m memory_profiler app/scraper/base_scraper.py